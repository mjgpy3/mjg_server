<%= javascript_include_tag "todos_js_helpers" %>

<h1>Listing todos</h1>

<% @todos.each do |todo| %>
  <% if not todo.completed %>
    <table onmouseover="box(this)" onmouseout="unbox(this)" style="background-color:<%= todo.color %>">
      <tr>
        <td colspan="4" width="100px"><b><%= todo.description %></b></td>
      </tr>
      <tr>
        <td><%= link_to 'Done', todo_complete_path(:todo_id => todo) %> |</td>
        <td><%= link_to 'Show', todo %> |</td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %> |</td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </table><br />
  <% end %>
<% end %>

<br />

<%= link_to 'New Todo', new_todo_path %>
