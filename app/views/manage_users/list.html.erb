<h1>Users</h1>

<table class="user_list" border="1">
  <tr class="header">
    <th>Id</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Creation Date</th>
  </tr>
<% 0.upto(@users.length-1) do |i| %>
  <tr class="<% if i % 2 == 0%>odd-row<% else %>even-row<% end %>">
    <td><%= @users[i].id %></td>
    <td><%= @users[i].email %></td>
    <td><%= @users[i].is_admin %></td>
    <td><%= @users[i].created_at %></td>
  </tr>
<% end %>
</table>
